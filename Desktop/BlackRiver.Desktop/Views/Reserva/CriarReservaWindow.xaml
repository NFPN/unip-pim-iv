<Window x:Class="BlackRiver.Desktop.Views.CriarReservaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Criar Reserva" Height="400" Width="600" Background="#FF2D2D30">
    <Grid>
        <Label Content="Data*" HorizontalAlignment="Left" Margin="44,29,0,0" VerticalAlignment="Top" Foreground="White" Width="120" />
        <DatePicker HorizontalAlignment="Left" Margin="64,63,0,0" VerticalAlignment="Top" Height="27" Width="199" RenderTransformOrigin="0.5,0.5">
            <DatePicker.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.25" ScaleX="1.25" />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform />
                </TransformGroup>
            </DatePicker.RenderTransform>
        </DatePicker>
        <Label Content="CPF" HorizontalAlignment="Left" Margin="39,111,0,0" VerticalAlignment="Top" Foreground="White" Width="120" />
        <TextBox x:Name="txtBoxNovaReservaCPF" HorizontalAlignment="Left" Margin="39,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="25" />
        <Button Content="Confirmar" HorizontalAlignment="Left" Margin="470,334,0,0" VerticalAlignment="Top" Height="40" Width="120" />
    </Grid>
</Window>
