<Window x:Class="BlackRiver.Desktop.Views.EditarHospedeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        BorderBrush="White" BorderThickness="1"
        Title="Editar Hóspede" Height="401" Width="600" Background="#FF2D2D31" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>

        <Label Content="Editar Hóspede" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="500" FontWeight="Bold" FontSize="14" Height="26" />

        <Label Content="Nome" HorizontalAlignment="Left" Margin="41,51,0,0" VerticalAlignment="Top" Foreground="White" Width="120" />
        <TextBox x:Name="txtBoxEditHospedeNome" HorizontalAlignment="Left" Margin="41,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="25" Foreground="White" />
        <Label Content="Idade" HorizontalAlignment="Left" Margin="284,58,0,0" VerticalAlignment="Top" Foreground="White" Width="120" />
        <TextBox x:Name="txtBoxNovoHospedeIdade" HorizontalAlignment="Left" Margin="284,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" Height="25" Foreground="White" />
        <Label Content="CPF" HorizontalAlignment="Left" Margin="41,123,0,0" VerticalAlignment="Top" Foreground="White" Width="120" />
        <TextBox x:Name="txtBoxEditHospedeCPF" HorizontalAlignment="Left" Margin="41,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="25" Foreground="White" />
        <Label Content="RG" HorizontalAlignment="Left" Margin="284,123,0,0" VerticalAlignment="Top" Foreground="White" Width="120" />
        <TextBox x:Name="txtBoxEditHospedeRG" HorizontalAlignment="Left" Margin="284,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="25" Foreground="White" />
        <Label Content="Telefone" HorizontalAlignment="Left" Margin="41,0,0,0" VerticalAlignment="Center" Foreground="White" Width="120" />
        <TextBox x:Name="txtBoxEditHospedeTel" HorizontalAlignment="Left" Margin="41,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="25" Foreground="White" />
        <Label Content="Email" HorizontalAlignment="Left" Margin="41,265,0,0" VerticalAlignment="Top" Foreground="White" Width="120" />
        <TextBox x:Name="txtBoxEditHospedeEmail" HorizontalAlignment="Left" Margin="41,294,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="25" Foreground="White" />
        <Label Content="CNPJ" HorizontalAlignment="Left" Margin="284,0,0,0" VerticalAlignment="Center" Foreground="White" Width="120" />
        <TextBox x:Name="txtBoxEditHospedeCNPJ" HorizontalAlignment="Left" Margin="284,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="25" Foreground="White" />
        <!--<CheckBox x:Name="checkResetarSenha" Content="Resetar Senha" HorizontalAlignment="Left" Margin="380,301,0,0" VerticalAlignment="Top" Foreground="White" IsChecked="True" />-->
        <Button x:Name="btnEditHospedeAtualizar" Content="Atualizar" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="40" Width="100" Click="btnEditHospedeAtualizar_Click" />
        <Button x:Name="btnCloseWindow" HorizontalAlignment="Right" Margin="0,3,0,0" VerticalAlignment="Top" Width="35" BorderBrush="{x:Null}" Click="btnCloseWindow_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Resources/Icons/window-close.png" Stretch="UniformToFill" />
            </Button.Background>
        </Button>
    </Grid>
</Window>
